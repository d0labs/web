---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CanvasLogo from "../../components/CanvasLogo.astro";

const posts = (await Astro.glob("./*.md")).sort(
  (a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date)
);
---

<BaseLayout
  title="d0labs | blog"
  description="Notes and updates from d0labs."
  bodyClass="blog"
>
  <CanvasLogo canvasId="blog-logo" size="small" ratio={0.35} maxWidth={900} />
  <div class="blog-header">Blog</div>
  <ul class="blog-list">
    {posts.map((post) => (
      <li>
        <a href={post.url}>{post.frontmatter.title}</a>
        <span class="blog-meta">
          {post.frontmatter.date} â€” {post.frontmatter.description}
        </span>
      </li>
    ))}
  </ul>
</BaseLayout>
