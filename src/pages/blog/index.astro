---
import BaseLayout from "../../layouts/BaseLayout.astro";
const posts = (await Astro.glob("./*.md")).sort(
  (a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date)
);
---

<BaseLayout
  title="d0labs | blog"
  description="Notes and updates from d0labs."
  bodyClass="blog"
>
  <div class="logo-static">
    <a href="/" aria-label="Home">
      <img src="/src/assets/logo.svg" alt="d0labs" />
    </a>
  </div>
  <div class="blog-header">Blog</div>
  <ul class="blog-list">
    {posts.map((post) => (
      <li>
        <a href={post.url}>{post.frontmatter.title}</a>
        <span class="blog-meta">
          {post.frontmatter.date} â€” {post.frontmatter.description}
        </span>
      </li>
    ))}
  </ul>
</BaseLayout>
