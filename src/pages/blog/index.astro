---
import BaseLayout from "../../layouts/BaseLayout.astro";
const posts = (await Astro.glob("./*.md")).sort(
  (a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date)
);
---

<BaseLayout
  title="d0labs | blog"
  description="Notes and updates from d0labs."
  canonical="https://d0labs.com/blog/"
  bodyClass="blog"
>
  <div class="logo-static">
    <a href="/" aria-label="Home">
      <img src="/logo.svg" alt="d0labs" />
    </a>
  </div>
  <div class="blog-header">Blog</div>
  <ul class="blog-list">
    {posts.map((post) => (
      <li class="blog-item">
        <a class="blog-title" href={post.url}>{post.frontmatter.title}</a>
        <div class="blog-meta">
          <span>{String(post.frontmatter.date).split("T")[0]}</span>
          {post.frontmatter.author && (
            <>
              <span class="meta-sep">Â·</span>
              <a class="author-link" href={`/author/${post.frontmatter.author}/`}>{post.frontmatter.author}</a>
            </>
          )}
        </div>
        {post.frontmatter.description && (
          <p class="blog-summary">{post.frontmatter.description}</p>
        )}
      </li>
    ))}
  </ul>
</BaseLayout>
